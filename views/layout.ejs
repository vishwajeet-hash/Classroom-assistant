<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/e32f3d0e24.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/css/home_style.css">
    <link rel="stylesheet" href="/css/join_classroom.css">
    <%- style %>
    <title>Home</title>
</head>
<body id="main-body">
    <nav>
        <button id="bar" class="ham-bar-icon">
            <i class="fas fa-bars fa-lg" ></i>
        </button>
        <div id="avtar">
            <img src="/images/profile.jpg" alt="profile">
        </div>
        <div id="heading">
            <h1>Classroom Assistant</h1>
        </div>
        <button id="create">
            <i class="fas fa-plus fa-lg"></i>
        </button>
        <button id="settings">
            <i class="fas fa-cog fa-lg fa-spin fa-pulse"></i>
        </button>
    </nav>
<section id="menu-visible" >
    <p>all the Classroom</p>
</section>
<section id="settings-dropdown">
    <ul>
        <li>
            <a href="/users/profile">
                <button>
                    Profile
                </button>
            </a>
        </li>

        <li>
            <a href="/users/Sign-out">
                <button>
                    Signout
                </button>
            </a>    
        </li>
        
    </ul>
</section>
<section id="create-join-dropdown">
    <ul>
        <li>
            <a href="/classrooms/new">
                <button>
                    Create
                </button>
            </a>
        </li>
        <li>
            
                <button onclick="joinClassroom()">
                    Join
                </button>
        
        </li>
    </ul>
</section>
<main id=user-details > 
    <%- body %>
    </main>
    <div class="join-classroom-form-container" id="join">
        <div class="join-classroom-container">
        <h3>Create Classroom Form</h3>
        <i class="fas fa-window-close fa-lg" onclick="closejoinclassroom()"></i>
    <form action="/classrooms/join-classroom" method="post">
        <label for="id">Classroom Id</label>
        <input type="text" name="classroom_id" placeholder="Enter the id ">
        <input type="submit" value="Submit">
    </form>
</div>
</div>
    <script src="/js/profile.js"></script>
    <%- script %>
</body>
</html>